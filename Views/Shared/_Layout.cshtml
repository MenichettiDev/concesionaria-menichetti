<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VM Autos</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="mb-4">🚗 <strong>VM Autos</strong></h4>

        <div class="mb-3">
            <span class="badge bg-primary text-white px-3 py-2 rounded-pill">
                👋 Hola, <strong>@(User.Identity.IsAuthenticated? User.Identity.Name : "Invitado")</strong>
            </span>

        </div>

        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-area="" asp-controller="Home" asp-action="Index">🏠 Inicio</a>
            <a asp-controller="Usuario" asp-action="Login">🔑 Iniciar Sesión</a>
        }
        else
        {
            <a asp-area="" asp-controller="Home" asp-action="Index">🏠 Inicio</a>
            <a asp-controller="Vehiculo" asp-action="Index">🚘 Mis Vehículos</a>
            <a asp-controller="Usuario" asp-action="Perfil">⚙️ Perfil</a>
            @* <a asp-controller="Cliente" asp-action="Index">👤 Clientes</a> *@
            @* <a asp-controller="Venta" asp-action="Index">🧾 Ventas</a> *@

            @if (User.IsInRole("Admin"))
            {
                <hr />
                <h6>🔧 Admin Panel</h6>
                <hr />
                <a asp-controller="PlanesConcesionaria" asp-action="Index">🛠️ Planes concesionaria</a>
                <a asp-controller="Suscripciones" asp-action="Index">🛠️ Suscripciones usuarios</a>
                <a asp-controller="Usuario" asp-action="Index">🛠️ Admin Usuarios</a>
            }

            <a asp-controller="Usuario" asp-action="Logout">🚪 Cerrar Sesión</a>
        }
    </div>

    <!-- Contenido principal -->
    <div class="main-content">
        <header>
            <nav class="navbar navbar-expand navbar-light bg-white border-bottom mb-4 shadow-sm">
                <div class="container-fluid">
                    <span class="navbar-brand mb-0 h1">Villa Mercedes Autos</span>
                </div>
            </nav>
        </header>

        <main role="main" class="flex-grow-1">
            @RenderBody()
        </main>

        <footer class="mt-3">
            <div>
                &copy; 2025 - Villa Mercedes Autos |
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Derechos reservados</a>
            </div>
        </footer>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
