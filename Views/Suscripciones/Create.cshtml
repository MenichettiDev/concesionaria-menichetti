@model concesionaria_menichetti.Models.Suscripcione

@{
    ViewData["Title"] = "Crear Plan para Concesionaria";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="card shadow p-4">
    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label for="Nombre">Nombre de la Suscripcion</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" required />
        </div>

        <div class="form-group mb-3">
            <label for="Precio">Precio</label>
            <input type="number" class="form-control" id="Precio" name="Precio" step="0.01" required />
        </div>

        <div class="form-group mb-3">
            <label for="Descripcion">Descripci√≥n</label>
            <textarea class="form-control" id="Descripcion" name="Descripcion" rows="3" required></textarea>
        </div>

        <div class="form-group mb-4">
            <label for="CantidadPublicaciones">Cantidad de Publicaciones</label>
            <input type="number" class="form-control" id="CantidadPublicaciones" name="CantidadPublicaciones"
                required />
        </div>

        <button type="submit" class="btn btn-primary">Guardar Plan</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
