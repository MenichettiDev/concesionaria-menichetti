@model concesionaria_menichetti.Models.Suscripcione

@{
    ViewData["Title"] = "Eliminar Suscripcion";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<p>¿Estás seguro de que deseas eliminar el plan <strong>@Model?.Nombre</strong>?</p>

<div class="card p-4 shadow-sm">
    <dl class="row">
        <dt class="col-sm-4">Nombre</dt>
        <dd class="col-sm-8">@Model?.Nombre</dd>

        <dt class="col-sm-4">Precio</dt>
        <dd class="col-sm-8">$@Model?.Precio?.ToString("N2")</dd>

        <dt class="col-sm-4">Descripción</dt>
        <dd class="col-sm-8">@Model?.Descripcion</dd>

        <dt class="col-sm-4">Cantidad de Publicaciones</dt>
        <dd class="col-sm-8">@Model?.CantidadPublicaciones</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
