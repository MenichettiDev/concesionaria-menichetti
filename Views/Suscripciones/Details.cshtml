@model concesionaria_menichetti.Models.Suscripcione

@{
    ViewData["Title"] = "Detalles Suscripcion";
}

<h1 class="mb-4"><i class="bi bi-info-circle-fill"></i> @ViewData["Title"]</h1>

<div class="card shadow rounded p-4 mb-4 bg-light">
    <div class="row g-4">
        <div class="col-md-6">
            <h5><strong>Nombre Suscripcion:</strong> @Model?.Nombre</h5>
            <p><strong>Precio:</strong> $@Model?.Precio?.ToString("N2")</p>
            <p><strong>Publicaciones Permitidas:</strong> @Model?.CantidadPublicaciones</p>
        </div>
        <div class="col-md-6">
            <p><strong>Descripci√≥n:</strong></p>
            <div class="bg-white border rounded p-2">
                @Model?.Descripcion
            </div>
        </div>
    </div>
</div>

<a asp-action="Index" class="btn btn-outline-secondary">
    <i class="bi bi-arrow-left"></i> Volver al listado
</a>
