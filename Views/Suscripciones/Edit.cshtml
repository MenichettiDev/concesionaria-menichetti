@model concesionaria_menichetti.Models.Suscripcione

@{
    ViewData["Title"] = "Editar Plan";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<h1 class="mb-4"><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Nombre">Nombre suscripcion</label>
        <input asp-for="Nombre" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Precio">Precio</label>
        <input asp-for="Precio" type="number" step="0.01" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label asp-for="CantidadPublicaciones">Cantidad de Publicaciones</label>
        <input asp-for="CantidadPublicaciones" type="number" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Descripcion">Descripci√≥n</label>
        <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>
