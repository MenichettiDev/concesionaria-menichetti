@model concesionaria_menichetti.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h1 class="mb-4"><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}
<div id="usuarioEdit">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label>Nombre</label>
            <input type="text" class="form-control" v-model="usuario.nombre" name="Nombre" required />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" v-model="usuario.email" name="Email" required />
        </div>
        <div class="form-group">
            <label>Telefono</label>
            <input type="text" class="form-control" v-model="usuario.Telefono" name="Telefono" required />
        </div>
        <div class="form-group">
            <label>Ubicacion</label>
            <input type="text" class="form-control" v-model="usuario.Ubicacion" name="Ubicacion" required />
        </div>

        <div class="form-group">
            <label>¿Es concesionaria?</label>
            <select class="form-control" v-model="usuario.esConcesionaria" name="EsConcesionaria">
                <option :value="true">Sí</option>
                <option :value="false">No</option>
            </select>
        </div>

        <div class="form-group">
            <label>¿Verificado?</label>
            <select class="form-control" v-model="usuario.verificado" name="Verificado">
                <option :value="true">Sí</option>
                <option :value="false">No</option>
            </select>
        </div>

        <div class="form-group">
            <label>Estado</label>
            <select class="form-control" v-model="usuario.activo" name="Activo">
                <option :value="true">Activo</option>
                <option :value="false">Inactivo</option>
            </select>
        </div>

        <div class="mt-3">
            <a href="@Url.Action("Index", "Usuario")" class="btn btn-secondary">Volver</a>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
</div>


@section Scripts {
    <script>
        new Vue({
            el: '#usuarioEdit',
            data: {
                usuario: {
                    nombre: '@Model.Nombre',
                    email: '@Model.Email',
                    esConcesionaria: '@(Model.EsConcesionaria?.ToString().ToLower() ?? "false")' === 'true',
                    verificado: '@(Model.Verificado?.ToString().ToLower() ?? "false")' === 'true',
                    activo: '@(Model.Activo?.ToString().ToLower() ?? "false")' === 'true'
                }
            }
        });
    </script>
}
