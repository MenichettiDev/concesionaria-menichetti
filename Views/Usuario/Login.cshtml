@{
    Layout = null;
    ViewData["Title"] = "Login";
}

@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: '¡Éxito!',
            text: '@TempData["SuccessMessage"]',
            confirmButtonText: 'Cerrar',
            customClass: {
                popup: 'rounded shadow'
            }
        });
    </script>
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body,
        html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .fullscreen-background {
            background: linear-gradient(135deg, #2d3941, #8e9fa5);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            width: 100%;
            max-width: 400px;
            position: relative;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
        }

        .close-btn {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: transparent;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: #888;
        }

        h1 {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .form-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .form-group input {
            width: 100%;
            padding: 0.75rem 2.5rem 0.75rem 0.75rem;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        .form-group i {
            position: absolute;
            top: 50%;
            right: 1rem;
            transform: translateY(-50%);
            color: #aaa;
        }

        .remember-forgot {
            display: flex;
            justify-content: space-between;
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }

        .btn {
            width: 100%;
            padding: 0.75rem;
            background-color: #434444;
            border: none;
            color: white;
            font-weight: bold;
            border-radius: 8px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #ebe85c;
        }

        .register-link {
            text-align: center;
            margin-top: 1rem;
            font-size: 0.9rem;
        }

        .error-message {
            color: red;
            font-size: 0.85rem;
        }
    </style>
</head>

<body>
    <div class="fullscreen-background">
        <div class="container">
            <!-- Cerrar (opcional) -->
            <a href="/" class="close-btn" title="Cerrar">
                <i class="bx bx-x"></i>
            </a>

            <!-- Login -->
            <form method="post" asp-action="Login">
                <h1>Login</h1>

                @if (ViewBag.MensajeError != null)
                {
                    <div class="error-message text-center">@ViewBag.MensajeError</div>
                }

                <div class="form-group">
                    <input type="text" name="nombreUsuario" placeholder="Usuario" required />
                    <i class="bx bxs-user"></i>
                </div>

                <div class="form-group">
                    <input type="password" name="contrasenia" placeholder="Contraseña" required />
                    <i class="bx bxs-lock-alt"></i>
                </div>

                @* <div class="remember-forgot">
                    <label><input type="checkbox" /> Recordar</label>
                    <a href="#">Olvidé mi contraseña</a>
                </div> *@

                <button type="submit" class="btn">Iniciar Sesión</button>

                <a asp-controller="Home" asp-action="Index" class="btn mt-2">
                    Ingresar solo de visita!
                </a>


                <div class="register-link">
                    <p>¿No tienes una cuenta? <a asp-controller="Usuario" asp-action="Registro">Registrate</a></p>
                </div>
            </form>
        </div>
    </div>
</body>

</html>
